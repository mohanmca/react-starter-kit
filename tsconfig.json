{
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "outDir": "./build/",
    "sourceMap": true,
    "typeRoots" : ["./typings"]    
  },
  "include": [
      "**/*.ts",
      "./typings/globals/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": true
}